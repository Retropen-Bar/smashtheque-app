<div class="container-lg">
  <% if admin_user_signed_in? || user_recurring_tournament_admin? %>
    <div class="actions">
      <% if admin_user_signed_in? %>
        <%= admin_edit_link(tournament_event, label: 'Admin', class: 'btn btn-sm btn-light rounded-pill') %>
      <% end %>
      <%= link_to 'Modifier', [:edit, tournament_event], class: 'btn btn-sm btn-primary rounded-pill ml-2' %>
      <%= form_for(tournament_event.recurring_tournament.decorate, html: { class: 'd-inline-block' }) do |f| %>
        <%= f.hidden_field :is_archived, value: !tournament_event.recurring_tournament.decorate.is_archived? %>
        <% if tournament_event.recurring_tournament.decorate.is_archived? %>
          <%= f.button type: :submit, class: 'btn btn-sm btn-success rounded-pill ml-2' do %>
            <%= fas_icon_tag :play, %w(mr-2) %>
            Relancer
          <% end %>
        <% else %>
          <%= f.button type: :submit, class: 'btn btn-sm btn-danger rounded-pill ml-2' do %>
            <%= fas_icon_tag :pause, %w(mr-2) %>
            Mettre en pause
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <article class="show-page">
    <%= render 'tournament_events/header', tournament_event: tournament_event %>

    <nav class="show-page-nav section-nav players d-lg-none">
      <div class="section-nav-wrapper">
        <scrollactive
          ref="scrollactive"
          :active-class="'active'"
          :offset="116"
        >
          <div class="section-nav-bg shadow-lg">
          <%= link_to tournament_event_path(tournament_event, anchor: 'inscription'), class: "section-nav-link scrollactive-item" do %>
              <span>Top 8</span>
            <% end %>
            <%= link_to tournament_event_path(tournament_event, anchor: 'graph'), class: "section-nav-link scrollactive-item" do %>
              <span>Graph</span>
            <% end %>
          </div>
        </scrollactive>
      </div>
    </nav>
    <section class="show-page-body card">
      <div class="show-page-content card-body">
        <div class="row justify-content-center">
          <div class="col-lg-6">
            <section id="inscription" class="show-page-section">
              <div class="show-page-section-title">
                <h2>Top 8</h2>
                <span class="show-page-section-title-separator"></span>
              </div>
              <div class="show-page-section-body">
                <div class="list">

                  <% tournament_event.model.class::TOP_NAME_RANK.each do |top_name, rank| %>
                    <% awarded = tournament_event.send(top_name) %>
                    <% type = tournament_event.class.name =~ /duo/i ? 'duo' : 'player' %>
                    <% if awarded %>
                      <%= render "#{type}s/#{type}_v2", "#{type}": awarded&.decorate,
                                                      is_online: tournament_event.recurring_tournament.decorate.is_online?,
                                                      with_points: true,
                                                      with_rank: true,
                                                      rank: rank %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </section>
          
          </div>
          <% if tournament_event.graph_image_tag %>
          <div class="col-lg-6">
            <section id="graph" class="show-page-section">
              <div class="show-page-section-title">
                <h2>Graph</h2>
                <span class="show-page-section-title-separator"></span>
              </div>
              <div class="show-page-section-body">
                <%= tournament_event.graph_image_tag max_width: '100%', class: 'shadow' %>
              </div>
            </section>
          </div>
          <% end %>
        </div>
      </div>
    </section>
  </article>
</div>


<div id="<%= modal_id %>" class="modal fade" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Tous les badges <%= is_online ? 'online' : 'offline' %> de <%= awarded.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <% all_rewards.grouped_by_level1.each do |(level1, level1_rewards)| %>
            <div class="col reward-badges">
              <% level1_rewards.each do |reward| %>
                <% count = rewards_counts[reward.id] %>
                <% if count %>
                  <%= reward.decorate.badge(count: count, class: 'mb-2') %>
                <% else %>
                  <%= reward.decorate.badge(class: 'disabled mb-2') %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
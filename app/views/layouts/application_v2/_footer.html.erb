      <% end %>
      <li><a class="nav-link" href="/admin">Admin</a></li>
    </ul>
    <ul class="nav ml-auto">
      <li>
        <a class="nav-link" href="https://github.com/Retropen-Bar" target="_blank">
          <%= render partial: 'shared/icons/github' %>

              <div class="dropdown-divider"></div>
              <h6 class="dropdown-header"><%= page.name %></h6>
              <% page.children.published.each do |subpage| %>
                <%= link_to subpage.name,
                            page_path(slug: subpage.slug),
                            class: 'dropdown-item' %>
              <% end %>
              <div class="dropdown-divider"></div>
            <% else %>
              <%= link_to page.name,
                          page_path(slug: page.slug),
                          class: 'dropdown-item' %>
            <% end %>
          <% end %>
        </div>

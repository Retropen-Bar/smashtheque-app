                <%= link_to recurring_tournament.name_with_logo(max_width: 32, max_height: 32),
                            recurring_tournament_path(recurring_tournament),
                            class: 'dropdown-item' %>
              <% end %>
            <% end %>
            <%= link_to 'Déconnexion', destroy_user_session_path, class: 'dropdown-item' %>
          </div>

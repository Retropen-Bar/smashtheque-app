<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= render partial: 'layouts/application_v2/meta' %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render 'shared/favicons' %>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <%= stylesheet_pack_tag 'application_v2', media: 'all' %>
    
    <%= google_places_api_tag %>
  </head>
  <body class="<%= controller.controller_name %> <%= controller.action_name %> <%= "section-#{current_section_name}" %><% if @static %> static<% end %>">
    <div id="app">
      <%= render partial: 'layouts/application_v2/flash', flash: flash %>
      <%= render partial: 'layouts/application_v2/head' %>

      <% if @static %>
        <div class="d-flex justify-content-center my-5 mx-3">
          <div class="bg-semi-transparent shadow p-3 p-md-5 rounded"
                style="width: 100%; max-width: 1024px;">
            <% end %>
            <%= yield %>
            <% if @static %>
          </div>
        </div>
      <% end %>

      <%= render partial: 'layouts/application_v2/shortcuts' %>
      <%= render partial: 'layouts/application_v2/search' %>
      <%= render partial: 'layouts/application_v2/footer' %>
    </div>
    <%= javascript_pack_tag 'application_v2' %>
    <%= yield :script %>
  </body>
</html>

<div class="text-center">
  <div id="list-toolbar">
    <h1 class="page-title">Commentateurs</h1>
    <%= render 'shared/pagination', collection: @caster_users %>
  </div>
</div>

<div class="cards-list caster-users">
  <% @caster_users.decorate.each do |user| %>
    <div class="card-container">
      <div class="card caster-user shadow-sm">
        <div class="card-body">
          <%= user.decorate.link %>
        </div>
        <%= admin_edit_link(user) %>
      </div>
    </div>
  <% end %>
</div>

<%= render 'shared/pagination', collection: @caster_users %>

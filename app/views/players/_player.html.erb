<div class="card player">
  <div class="card-body">
    <h5 class="card-title">
      <% if player.team %>
        <div class="float-right">
          <i class="fas fa-users"></i>
          <%= link_to player.team.name, player.team, class: 'text-muted' %>
        </div>
      <% end %>
      <%= link_to player.name, player %>
    </h5>
    <% if player.location %>
      <div class="float-right">
        <i class="fas fa-map-marker-alt"></i>
        <%= link_to player.location.name.titleize, location_path(player.location) %>
      </div>
    <% end %>
    <% player.characters.each do |character| %>
      <%= link_to character.decorate.emoji_image_tag(max_height: '32px'), character %>
    <% end %>
  </div>
</div>

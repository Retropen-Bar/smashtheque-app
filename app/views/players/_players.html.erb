<%= render 'shared/letters' %>

<%= paginate players,
             theme: 'twitter-bootstrap-4',
             pagination_class: 'pagination-sm justify-content-center mt-4 mb-4' %>

<div class="cards-list players">

  <div class="row justify-content-md-center">
    <div class="col col-6">
      <% players.each do |player| %>
        <%= render 'players/player', player: player %>
      <% end %>
    </div>
  </div>

</div>
